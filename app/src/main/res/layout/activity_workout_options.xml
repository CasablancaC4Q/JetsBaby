<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="comli.example.c4q.jets.secondaryactivities.WorkoutOptions">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STRETCH AGAIN BRO"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#2A433A"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEIGHTS BRO"
        android:id="@+id/weight_button"
        android:textColor="#2A433A"

        />

   <android.support.v7.widget.RecyclerView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/stretch_re"
       >


   </android.support.v7.widget.RecyclerView>

</LinearLayout>
