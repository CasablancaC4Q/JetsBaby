<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comli.example.c4q.jets.DrillsActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFFENSE"
        android:textSize="70sp"
        android:textStyle="bold"
        android:textColor="#2A433A"
        />

    <Button
        android:id="@+id/defense_button_drills"
        android:textColor="#2A433A"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DFFENSE" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/wr_drills_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:text="@string/wrdrill"
        android:textColor="#2A433A"


        />


</LinearLayout>
